//-------------------------------------------- structure

#pay main.index
    & section
        margin: 70px 0 0 0
        padding: 0
        & header
            & h1
                font-size: 5.4em
                text-align: center
                margin: 0
                & img
                    margin: 0 20px 0 0
                    vertical-align: middle
        & article
            display: flex
            justify-content: space-between
            align-items: center
            margin: 40px 0
            padding: 30px
            background: white
            border: 1px solid _faded_brown
            border-radius: 4px
            clearfloat()
            & div
                display: flex
                flex-flow: row wrap
                &:first-of-type
                    min-width: 320px
                    margin: 0
                    padding: 0
                &:last-of-type
                    flex: 1
                    margin-left: 10px
                    svg
                        &:first-of-type
                            width: 160px
                            height: 34px
                        &:last-of-type
                            width: 390px
                            height: auto
                            align-self: flex-end
                    p
                        width: 100%
                        margin: 0;
                        &:first-of-type
                            margin-top: 25px
                            padding-top: 25px
                            padding-bottom: 12px
                            border-top: 1px solid lighten(_faded_brown, 60%)
                        &:last-of-type
                            margin-bottom: 25px
                            padding-bottom: 30px
                            padding-top: 12px
                            border-bottom: 1px solid lighten(_faded_brown, 60%)
