//---------------------------------------------------------| HOME

//-------------------------------------------- structure

#billboard
    position: relative
    width: _16
    margin: 75px 0 0 0
    padding: 0
    & div
        width: _15
        margin: 0
        padding: 0
        text-align: center
        & h1
            font-size: 3em
            color: #23422D
            margin: 0 0 0.2em 0
        & h2
            font-size: 1.6em
            font-weight: normal
            color: #3F3222
            letter-spacing: normal
            line-height: 1.2
            margin: 0
        & a
            display: none

#introduction
    margin: 15px 0 0 0
    & h2
        display: none
    & p
        font-family: sans_serif
        font-size: 1.2em
        font-weight: 300
        text-align: center
        line-height: 1.5
        margin: 0

#featured
    margin: 0 0 20px 0
    clearfloat()
    & a
        margin: 1.3em 0 0.4em
        padding: 1.5em 10px
        width: 48%
        float: left
        text-align: center
        text-shadow: 1px 1px 0 #000
        border-radius: 10px
        border-width: 4px
        border-style: solid
        text-decoration: none
        transition(all 250ms ease)
        & h2
            font-size: 2.7em
            margin: 0 0 0.1em
            padding: 0
            & i.fa
                font-size: 1.1em
                padding-bottom: 6px
        & h3
            font-size: 1.6em
            margin: 0
            padding: 0
        &:first-of-type
            border-color: _brown
            background: transparent url('../images/home/promotions.jpg') no-repeat center
            background-size: cover
            margin-right: 1em
            & h2, h3
                color: #E8E3DC
            &:hover
                opacity: 0.9
                border-color: darken(_brown, 40%)
        &:last-of-type
            border-color: _green
            background: transparent url('../images/home/maps.jpg') no-repeat center
            background-size: cover
            & h2, h3
                color: #E8EDE9
            &:hover
                opacity: 0.9
                border-color: darken(_green, 40%)

#directory
    margin: 0 0 120px 0 
    clearfloat()
    & div
        margin: 0 0 18px 0
        padding: 1.3em 0 0 0
        width: _16
        border-radius: 8px
        cursor: default
        linear_gradient(bottom, rgba(226, 211, 201, 0.9), rgba(239, 229, 222, 0.5))
        transition(all 250ms ease)
        &:hover
            background-color: rgba(216, 202, 192, 0.6)
            box-shadow: inset 0 0 8px rgb(201, 185, 175)
        & h3
            font-size: 2.5em
            margin: 0 0 0.1em 0
            padding: 0 0 0.3em 0.5em
            border-bottom: 2px dotted #C1ACA2
            text-shadow: 1px 1px 0 #fff
        & p
            margin-top: 0.8em
            margin-bottom: 1.1em
            padding: 0 1.4em
        &:nth-of-type(1) h3
            background: transparent url('../images/home/chalets.png') no-repeat 95% top
        &:nth-of-type(2) h3
            background: transparent url('../images/home/tenting.png') no-repeat 93% top
        &:nth-of-type(3)
            margin-right: 0
            & h3
                background: transparent url('../images/home/farm.png') no-repeat 93% top
        & a
            font-family: 'Alegreya Sans', sans_serif
            font-weight: 400
            text-transform: uppercase
            button(dark, rgba(173, 140, 119, 0.7), 1.2em, 700, 0 0 8px 8px, 12px 10px)
            width: 100%
            &:hover
                text-decoration: none

