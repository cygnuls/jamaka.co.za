.navHoverBack
    color: #CBD3CE
    text-decoration: none
    text-shadow: -1px -1px 0 rgba(10,10,10,0.9)
    //                  left right blur spread
    box-shadow: inset -5px 0 5px -2px rgba(38,38,38,0.6),
                inset 5px 0 5px -4px rgba(38,38,38,0.6)
    background: #1D3824

//-------------------------------------------- dropdown

header nav[role='primary'] > ul
    & li > ul
        display: none
        position: absolute
        background: #1D3824
        border-radius: 0 0 6px 6px
        box-shadow: 0 3px 2px -1px rgba(0,0,0,0.7)
        z-index: 1
        & li
            float: none
            &:first-of-type a
                border-top: none
            &:last-of-type a
                border-radius: 0 0 6px 6px
            & a
                font-size: 1.5em
                padding: 1.5em 1.1em
                text-shadow: -1px -1px 0 rgba(15,15,15,0.6)
                box-shadow: inset 0 1px 0 #3F5944 !important
                border-top: 1px solid #122616
                border-left: none !important
                border-right: none !important
                transition(all 220ms ease)
                &:hover
                    color: #1D3824
                    text-shadow: 1px 1px 0 #EDEFEE
                    box-shadow: inset 0 1px 0 #7F9683 !important
                    background: #CDD6CF