body
    margin: 0 0 270px 0
    color: _default

header#general
    width: _16
    margin: 0
    clearfloat()
    linear_gradient(bottom, #1D3824, #5B8264)
    & div
        width: _15
        margin: 0
        margin-left: auto
        margin-right: auto
        padding: 0 0.5em
        & h1
            position: absolute
            top: 0
            left: 50%
            margin: 0 0 0 -122px
            padding: 0
            z-index: 2

.oldie header#general h1
    display: block
    width: 244px
    height: 104px

main
    width: _15
    position: relative
    margin: 0 auto
    padding: 0 0 30px 0

//---------------------------------------------------------| headings

h1, h2, h3, h4, h5, h6
    font-family: heavyweightregular, sans_serif
    text-transform: lowercase
    color: _headings

h1
    font-size: 2em
    margin: 0.67em 0
    letter-spacing:-2px

h2
    font-size: 1.5em
    margin: 0.5em 0
    letter-spacing:-1px

h3
    font-size: 1.17em
    margin: 1em 0

h4
    font-size: 1.1em
    margin: 1.33em 0

h5 
    font-size: 0.83em
    margin: 1.67em 0

h6
    font-size: 0.75em
    margin: 2.33em 0

//---------------------------------------------------------| paragraphs

p
    font: 400 1em sans_serif
    line-height: 1.5
    margin: 1em 0
    color: _paragraphs

//---------------------------------------------------------| miscellaneous

em
    padding-right: 0.12em
    font-weight: 300

//---------------------------------------------------------| tables

table
    & caption
        padding: 12px 0 14px 0
        font-size: x-large
        font-weight: 700
        letter-spacing: 0.02em
        border-radius: 5px 5px 0 0
    & th
        font-size: 1.4em
        font-weight: bold
        padding: 12px 15px
    & td
        font-size: 1.1em

//---------------------------------------------------------| lists 

ol, ul
    margin: 14px 0
    padding: 0 0 0 40px

ol li, ul li
    font-size: 1.2em
    margin: 12px 0

ol
    list-style: decimal
    list-style-position: outside

