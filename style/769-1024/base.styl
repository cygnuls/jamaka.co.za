//---------------------------------------------------------| navigation

header button
    display: none !important

header nav[role='primary']
    width: _16
    margin: 0
    padding: 0
    & ul
        width: 35%
        font-size: 0.66em
        line-height: 0
        margin: 0
        padding: 0
        & li
            float: left
            width: 25%
            line-height: 0
            margin: 0
            padding: 0
            & a
                display: block
                width: _16
                font-family: 'Alegreya Sans', sans_serif
                font-size: 1.1em
                font-weight: 700
                letter-spacing: 1px
                text-align: center
                text-transform: uppercase
                text-shadow: -1px -1px 0 #1D3824
                margin: 0
                padding: 1.9em 0
                color: #CBD3CE
                border-right: 1px solid #1D3824
                transition(all 220ms ease)
                &:hover
                    color: #DCE5DF
                    text-decoration: none
                    text-shadow: -1px -1px 0 rgba(10,10,10,0.9)
                    //                  left right blur spread
                    box-shadow: inset -5px 0 5px -2px rgba(38,38,38,0.6),
                                inset 5px 0 5px -4px rgba(38,38,38,0.6)
                    background: #1D3824
            & ul // revert to auto width for drop-downs
                width: auto
                & li
                    width: auto
                    & a
                        text-align: left
        &:first-of-type
            float: left
            padding-left: 0
            & li
                &:nth-of-type(4) a
                    border-right: none
                &:first-of-type a
                    border-left: 1px solid #1D3824
        &:last-of-type
            float: right

