//---------------------------------------------------------| navigation

header nav[role='primary']
    display: none
    position: absolute
    top: 49px
    left: 0
    width: _16
    margin: 0
    padding: 0
    background: #CBD3CE
    border-bottom: 1px solid #57725D
    z-index: 1
    & ul
        width: _16
        font-size: 0.66em
        line-height: 0
        margin: 0
        padding: 0
        & li
            width: _16
            line-height: 0
            margin: 0
            padding: 0    
            & a
                display: block
                width: _16
                font-family: 'Alegreya Sans', sans_serif
                font-size: 1.1em
                font-weight: 700
                letter-spacing: 1px
                text-transform: uppercase
                text-shadow: 1px 1px 0 #F7F9F8
                margin: 0
                padding: 1.6em 0 1.6em 1.5em
                color: _green
                transition(all 220ms ease)
                &:hover
                    color: #DCE5DF
                    text-decoration: none
                    text-shadow: -1px -1px 0 rgba(10,10,10,0.9)
                    //                  left right blur spread
                    box-shadow: inset -5px 0 5px -2px rgba(30,30,30,0.7),
                                inset 5px 0 5px -4px rgba(30,30,30,0.7)
                    background: #1D3824

header button
    float: right
    font-size: 1.35em
    color: #A1AFA4
    margin: 8px -10px 8px 0
    padding: 0.26em 0.35em
    background: none
    border: none
    border-radius: 3px
    text-shadow: -1px -1px 0 #1E3A25
    transition(all 200ms ease)
    &:hover
        color: #1D3824
        background: #DCE2DD
        cursor: pointer
        text-shadow: none
        box-shadow: inset 0 0 2px #1C3322

// class to be applied via jQuery
.navHoverBack
    text-decoration: none
    //                  left right blur spread
    box-shadow: inset -5px 0 5px -2px rgba(10,10,10,0.8),
                inset 5px 0 5px -4px rgba(10,10,10,0.8)
    background: #B6C1BA

//-------------------------------------------- dropdown

header nav[role='primary'] > ul
    & li > ul
        display: none
        position: absolute
        background: #1D3824
        box-shadow: 0 3px 2px -1px rgba(0,0,0,0.5)
        z-index: 1
        & li
            float: none
            &:first-of-type a
                border-top: none
            & a
                font-size: 1.5em
                color: #CBD3CE
                padding: 1.4em 0 1.4em 2.1em
                text-shadow: -1px -1px 0 rgba(15,15,15,0.6)
                box-shadow: inset 0 1px 0 #3F5944 !important
                border-top: 1px solid #122616
                border-left: none !important
                border-right: none !important
                transition(all 220ms ease)
                &:hover
                    color: #1D3824
                    text-shadow: 1px 1px 0 #EDEFEE
                    box-shadow: inset 0 1px 0 #7F9683 !important
                    background: #CBD3CE