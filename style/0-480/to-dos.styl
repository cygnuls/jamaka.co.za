// activities

#to-dos
    & section:first-of-type
        margin: 30px 0 0 0
        padding: 3em 0 1.6em 0
        text-shadow: 1px 1px 0 #F8F2EE
        background: transparent url('../images/activities/header.png') no-repeat center
        background-size: contain
        & > h2
            font-size: 3.4em
            text-align: center
            margin: 0 0 0.13em 0
        & > h3
            font-size: 2.1em
            text-align: center
            line-height: 1.2
            margin: 0
    & section:last-of-type
        margin: 0 0 220px
        padding: 0
        & article
            width: _16
            margin: 1.5em 0
            &:nth-of-type(3)
                clear: left
            &:nth-of-type(5)
                clear: left
            & img
                width: 70px
                float: left
                margin: 0 1.1em 0.1em 0
            & h3
                font-size: 2.2em
                margin: 0
            & p
                font-size: 1em
                margin: 0

