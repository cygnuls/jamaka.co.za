//-------------------------------------------- structure

// maps

#farm main.index
    & section:first-of-type
        margin-top: 15px
        padding: 2.2em 0 1.7em 0
        text-shadow: 1px 1px 0 #F8F2EE
        background: transparent url('../images/farm/header.png') no-repeat center
        background-size: contain
        & > h2
            font-size: 5em
            text-align: center
            margin: 0 0 0.13em 0
        & > h3
            font-size: 2em
            line-height: 1.1
            text-align: center
            margin: 0
    & section:last-of-type
        margin: 20px auto
        clearfloat()
        & > div
            width: 47%
            float: left
            margin: 0 3% 0 0
            padding: 0
            & h4
                font-size: 2em
                text-align: center
                margin: 0.6em 0
                padding: 0
            &:nth-of-type(1) a
                background-image: url('../images/farm/citrus.png')
                & span
                    background-image: url('../images/farm/citrus_.png')
            &:nth-of-type(2) a
                background-image: url('../images/farm/mangoes.png')
                & span
                    background-image: url('../images/farm/mangoes_.png')
            &:nth-of-type(3)
                margin-right: 0
                & a
                    background-image: url('../images/farm/rooibos.png')
                    & span
                        background-image: url('../images/farm/rooibos_.png')
            & a
                position: relative
                display: block
                margin: 0
                padding: 50% 0
                background-repeat: no-repeat
                background-position: center
                background-size: contain
                & span
                    position: absolute
                    top: 0
                    left: 0
                    width: _16
                    margin: 0
                    padding: 50% 0
                    background-repeat: no-repeat
                    background-position: center
                    background-size: contain
                    transition(opacity 500ms ease)
                    &:hover
                        opacity: 0
                &:active
                    top: 1px
    & hr
        margin: 0 0 230px 0

// ----------------------------------------------- farm -> citrus

#farm main.citrus
    & section
        margin: 35px 0 240px 0
        padding: 0
        & header
            & h1
                font-size: 3.8em
                text-align: center
                margin: 0
                & img
                    width: 60px
                    margin: 0 10px 0 0
                    vertical-align: middle
        & article
            & p
                font-size: 1em
            & figure
                width: _16
                max-width: 400px
                & figcaption
                    font-family: 'Alegreya Sans', sans_serif
                    font-size: 1.1em
                    text-align: center
                    padding: 0.5em 0.1em 0.7em
                    text-shadow: 1px 1px 0 _light_brown
                    linear_gradient(top, #D1BEB3, _light_brown)
                & img
                    width: _16
                    display: block
                    border-radius: 5px 5px 0 0

